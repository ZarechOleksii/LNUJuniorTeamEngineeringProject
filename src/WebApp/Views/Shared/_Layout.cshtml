<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OnlyMovies - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/Layout/MainLogo.png">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand-logo" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlyMovies</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Health" asp-action="Index">Health Check</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="margin-left: auto">
                                <a class="nav-link text-dark">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item" style="margin-left: auto">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" style="padding: 7px 20px 7px 20px;background-color: white; color: #23B298;border: 2px solid #23B298; transition: 0.3s ease; border-radius: 20px;" class="log-out-button-nav" value="Logout" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="margin-left: auto">
                                <a class="nav-link text-dark log-in-button-nav" asp-area="" asp-controller="Account" asp-action="Login"><p class="log-in-button-nav-p">Log In</p></a>
                            </li>
                            <li class="nav-item" style="margin-left: auto">
                                <a class="nav-link text-dark register-button-nav" asp-area="" asp-controller="Account" asp-action="Register"><p class="register-button-nav-p">Register</p></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - OnlyMovies
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
